<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Help">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/help">
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/helper"
                android:textAlignment="center"
                android:textColor="#00BCD4"
                android:textSize="36sp"
                android:textStyle="bold"
                app:fontFamily="casual" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:text="Para obtener mas informacion acerca de la aplicacion puedes contactarte por los siguientes medios:"
                android:textColor="#030302"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/Title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="@string/phone"
                    android:textColor="#030302"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/Title" />
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="300"
                    android:textAlignment="center"
                    android:text="(+57) 311 653 85 29"
                    android:textColor="#030302"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/Title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="@string/email"
                    android:textColor="#030302"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/Title" />
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="300"
                    android:textAlignment="center"
                    android:text="santiago.28.n@gmail.com"
                    android:textColor="#030302"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/Title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="@string/domicile"
                    android:textColor="#030302"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/Title" />
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="300"
                    android:textAlignment="center"
                    android:text="Cra. 20 # 16A - 15 / Pasto"
                    android:textColor="#030302"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/Title" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/regresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#00BCD4"
                android:text="@string/_return"
                android:textColor="#FFFFFF"
                android:textColorHint="#3F51B5"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/programer" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>