<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/font"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/colorBg1Calc">

        <TextView
            android:id="@+id/txtDisplay"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorTextDisplayCalc"
            android:textSize="80sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btnAC"
                    android:text="AC"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:background="@color/colorBg1Btns"
                    android:text="+/-"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp"
                    android:layout_marginRight="5dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btnPorcentaje"
                    android:text="%"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btnDivicion"
                    android:text="/"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btn7"
                    android:text="7"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btn8"
                    android:text="8"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btn9"
                    android:text="9"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btnMultiplicacion"
                    android:text="*"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btn4"
                    android:text="4"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btn5"
                    android:text="5"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btn6"
                    android:text="6"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btnMenos"
                    android:text="-"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button13"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btn1"
                    android:text="1"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button14"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btn2"
                    android:text="2"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button15"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btn3"
                    android:text="3"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button16"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btnMas"
                    android:text="+"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button17"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:layout_span="2"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btn0"
                    android:text="0"
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button18"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btnPunto"
                    android:text="."
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button19"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorBg1Btns"
                    android:onClick="btnIgual"
                    android:text="="
                    android:textColor="@color/colorTxtBtns"
                    android:textColorHint="#00000000"
                    android:textSize="24sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>